{
  "extends": "./config/tsconfig.base.json",
  "compilerOptions": {
    "typeRoots": ["./node_modules/@types"],
    "noEmit": true,
    "baseUrl": ".",
    "paths": {
      "@shared/*": [
        "./src/*"
      ]
    },
    "types": [
      "node",
      "jest"
    ]
  },
  "include": [
    "src",
    "src/**/*.test.ts",
    "src/**/*.debug.ts"
  ]
}
