{
  "extends": "../shared/config/tsconfig.base.json",
  "compilerOptions": {
    "outDir": "./dist",
    "baseUrl": ".",
    "paths": {
      "@src/*": [
        "src/*"
      ],
      "@shared/*": [
        "../shared/src/*"
      ]
    },
    "typeRoots": [
      "./node_modules/@types",
      "../node_modules/@types"
    ],
    "types": [
      "node",
      "jest"
    ]
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "src/**/*.test.ts",
    "src/**/*.debug.ts"
  ]
}
